{
  "name": "deluge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/lib/__tests__ src/lib/badges.ts src/lib/currency src/lib/payments --max-warnings=0",
    "lint:all": "eslint .",
    "lint:fix": "eslint src/lib/__tests__ src/lib/badges.ts src/lib/currency src/lib/payments --fix --max-warnings=0",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "docker:build": "docker build -t deluge .",
    "docker:run": "docker run -p 3000:3000 deluge",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@hookform/resolvers": "^3.9.1",
    "@prisma/client": "^6.2.1",
    "@react-pdf/renderer": "^4.3.2",
    "bcryptjs": "^2.4.3",
    "d3-geo": "^3.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "next": "^15.1.4",
    "next-auth": "^5.0.0-beta.25",
    "nodemailer": "^8.0.1",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-simple-maps": "^3.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/d3-geo": "^3.1.0",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.12",
    "happy-dom": "^20.5.0",
    "postcss": "^8.4.49",
    "prisma": "^6.2.1",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  }
}
